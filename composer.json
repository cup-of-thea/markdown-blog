{
    "name": "cup-of-thea/markdown-blog",
    "description": "Laravel package dedicated to manage a blog in markdown",
    "type": "laravel-package",
    "license": "This work is licensed under CC BY-NC-SA 4.0",
    "version": "1.2.0",
    "autoload": {
        "psr-4": {
            "CupOfThea\\MarkdownBlog\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Thea",
            "email": "thea.joy@outlook.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.44",
        "symfony/yaml": "^7.0",
        "illuminate/console": "^10.44",
        "erusev/parsedown": "^1.7",
        "erusev/parsedown-extra": "^0.8.1",
        "livewire/livewire": "^3.4"
    },
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": [
                "CupOfThea\\MarkdownBlog\\MarkdownBlogServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10"
    }
}
